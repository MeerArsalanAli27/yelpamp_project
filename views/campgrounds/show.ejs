



  <% layout('layouts/boilerplate')%> 
  <link rel="stylesheet" href="/stylesheets/stars.css">
 

  


  <div class="row ">
    <div class="col-5">
      <div id='map' ></div>
      <div id="campgroundcarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
           <% campid.image.forEach((img,i) => {%>
           <div class="carousel-item  <%= i=== 0 ? 'active':'' %>">
              <img class="d-block w-100" src="<%= img.url %>" alt=" first slide">
            </div>
            <%})%>
          </div>

          <% if(campid.image.length>1){ %>
          <a class="carousel-control-prev" href="#campgroundcarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#campgroundcarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
          <%}%>
        </div>
        
        
        
        
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= campid.title%></h5>
            <p class="card-text"><%= campid.description%></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> â‚¹ <%= campid.price%>/night</li>
            <li class="list-group-item"><%= campid.location%></li>
            <li class="list-group-item">submitted by:<%= campid.author.username%></li>
            <li class="list-group-item">
              
              <% if(currentuser && campid.author.equals(currentuser.id) ){ %>
                <form  action="/campground//<%=campid.id%>?_method=DELETE" method="post">
                  
                  <a href="/campground//<%=campid.id%>/edit" class="card-link d-inline btn btn-info">edit</a>
                  <button class="card-link d-inline btn btn-danger mb-2">delete campground</button>
                </form>
                <%}%>
                
              </li>
            </ul>
            <div class="card-body">
              <a href="/campground" class="card-link btn btn-primary">all campgrounds</a>
              
            </div>
            <div class="card-footer text-muted">
              2 days ago
            </div>
          </div>
        </div>
        
        
        <div class="col-5">
          <% if(currentuser) {%>
            <form action="/campground/<%=campid.id%>/reviews" method="post" class=" mb-3 validated-form" novalidate>
              <h2 class="mt-3">leave a REVIEW</h2>
              
              <!--  <div class="mb-3">
                <label for="eating" class="form-label">rating:</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
              </div> -->
              
              <div >
                <fieldset class="starability-basic">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                
                <div class="mb-3">
                  <label class="form-label" for="body">review:</label>
                  <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4" required></textarea>
                  <div class="valid-feedback">
                    looks good!!!!
                  </div>
              </div>
              <button class="btn btn-success">submit</button>
            </form>
            <% } %>
            
          
              
              <% for(let review of campid.reviews){ %>
                
                <div class="card mb-3">
                  
                  <div class="mb-4 card-body ">
                    
                    <h6 class="card-subtite mb-2 text-muted">by<%= review.author.username%></h6>
                    
                    <p class="starability-result" data-rating="<%= review.rating%>">
                      Rated: <%= review.rating%> stars
                    </p>
                    <p class="card-text">review:<%= review.body%></p>
                    <% if(currentuser && review.author.equals(currentuser.id) ){ %>
                      <form action="/campground//<%=campid.id%>/reviews//<%=review.id%>?_method=DELETE" method="post">
                        <button class="btn btn-danger sm">delete</button>
                      </form>
                      <%}%>
                      
                      
                      
                      
                   
                  </div>
                  
                  
                </div>
                <%}%>
                
              </div>
              
              
            </div>
                 
              <script>
                const mapToken='<%=process.env.mapbox_token%>'
                const  campid= <%-JSON.stringify(campid)%>
                </script>
           
           <script src="/javscripts/showmap.js"></script>
           